<body>
<div class="panel">
  <div class="small-12 medium-10 medium-centered large-8 large-centered columns">
    <h1>Edit Event</h1>

    <%= form_for(@event) do |f| %>
    <div class="field">
      <%= f.radio_button(:event_type, "business") %>
      <%= label_tag(:event_type, "Business") %>
      <%= f.radio_button(:event_type, "casual") %>
      <%= label_tag(:event_type, "Casual") %><br />
    </div>

    <div class="field">
      <%= f.label :venue_name, "Event Name" %><br />
      <%= f.text_field :event_name %>
    </div>

    <div class="field">
      <%= f.label :description, "Event Description" %><br />
      <%= f.text_area :description %>
    </div>

    <div class="field">
      <%= f.label :address, "Address" %><br />
      <%= f.text_field :address %>
    </div>

    <div class="field">
      <%= f.label :city %><br />
      <%= f.text_field :city %>
    </div>

    <div class="field">
      <%= f.label :state %><br />
      <%= f.select :state, options_for_select(us_states),{}, class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :zip_code, "Zip Code" %><br />
      <%= f.text_field :zip_code %>
    </div>

    <div class="field">
      <%= f.label :event_start %><br />
      <%= f.datetime_select(:event_start, :order => [:month, :day, :year], prompt: {hour: 'Choose hour', minute: 'Choose minute'}, minute_step: 15, ampm: true) %>
    </div>

    <div class="field">
      <%= f.label :event_end %><br />
      <%= f.datetime_select(:event_end, :order => [:month, :day, :year], prompt: {hour: 'Choose hour', minute: 'Choose minute'}, minute_step: 15, ampm: true) %>
    </div>

    <div class="actions">
      <%= f.submit "Update Event", :class => 'button round' %>
    </div>
    <% end %>
  </div>
</div>
</body>
