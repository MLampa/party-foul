<body>
  <div class="title-header show-footer panel">
    <h3><%= @event.event_name %></h3>
    <%= @event.description %>
    <%= @event.venue_name %><br>
    <%= @event.address %><br>
    <%= @event.city %>, <%= @event.state %> <%= @event.zip_code %>

    <% if user_signed_in? %>
      <% if @event.user_id == current_user.id %>
        <div class="inline-list"><%= link_to "Edit Your Event Information", edit_event_path, class: "button round small edit-info" %>
          <%= link_to "Delete Event", event_path, method: :delete, class: "button round small org-button" %>
        </div>
      <% else %>
        <%= button_to 'Attend', event_event_attendees_path(@event), method: :post, class: "button round small org-button" %>
      <% end %>
    <% else %>
      <h3><b>You must be signed in to attend an event.<br></h3>
      <%= link_to "Sign In", new_user_session_path %>
    <% end %>

    <h3>Guest List</h3>
      <% if @attendees.empty? %> Be the first to sign up! <% end %>

        <% @attendees.each do |attendee| %>
          <% if attendee.id == current_user.id %>
            <%= attendee.username %><br>
            <%= button_to 'Cannot Attend', event_attendee_path(@event_attendee), method: :delete %>
          <% else %>
            <div>
            <%= attendee.username %><br>
            <%= button_to 'Attend', event_event_attendees_path(@event), method: :post, class: "button round small org-button" %>
          <% end %>
        <% end %>
            </div>
  </div>

  <div class="text-center">
    <a href="<%= events_path %>" class="button">All Events</a>
  </div>

</body>
