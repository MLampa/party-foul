<body>
<div class="title-header show-footer">
  <h1><%= @event.event_name %></h1>
  <p><%= @event.description %></p>
  <%= button_to 'Attend', event_event_attendees_path(@event), method: :post, confirm: 'really?' %>

  <div class="text-center">
    <a href="<%= events_path %>" class="button">All Events</a>
  </div>

    <% @attendees.each do |attendee| %>
    <div>
      <%= attendee.username %>
      <% end %>
    </div>

    <% if @event.user_id == current_user.id %>
        <p><%= link_to "Edit Your Event Information", edit_event_path, class: "button round small edit-info" %></p>
        <p><%= link_to "Delete Event", event_path, method: :delete, class: "button round small org-button" %></p>
    <% end %>
</div>
</body>
